{
    "compilerOptions": {
        "outDir": "./dist", 
        "rootDir": "./src", 
        "lib": ["ES2020"], 
        "target": "ES2020",
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
